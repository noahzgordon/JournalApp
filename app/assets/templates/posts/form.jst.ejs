<div class="error-bar"></div>

<form id="update-form">
  <label for="post-title">Title</label>
  <input type="text"
         name="title"
         id="post-title"
         value="<%= post.get("title") %>">

  <br>

  <label for="post-body">Post</label>
  <br>
  <textarea name="body"
            id="post-body"><%= post.get("body") %></textarea>

  <br>

  <button id="post-button">Update Post</button>
</form>